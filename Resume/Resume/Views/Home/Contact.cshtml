@model Contact

@{
  ViewData["Title"] = "Contact";
}

<h1 class="section-title">Contact</h1>

<form method="post" asp-controller="Home" asp-action="SendMessage">

  <div class="form-group">
    <label asp-for="Email" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <input asp-for="Email" class="form-control" />
    </div>
    <span class="text-danger" asp-validation-for="Email"></span>
  </div>

  <div class="form-group">
    <label asp-for="Subject" class="col-md-2 control-label"></label>
    <div class="col-md-10">
      <input asp-for="Subject" class="form-control" />
    </div>
    <span class="text-danger" asp-validation-for="Subject"></span>
  </div>

  <div class="form-group">
    <label asp-for="Message" class="col-md-2"></label>
    <div class="col-md-10">
      <textarea asp-for="Message" class="form-control"></textarea>
    </div>
    <span class="text-danger" asp-validation-for="Message"></span>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" value="Send" class="btn btn-success btn-form" />
    </div>
  </div>

</form>

